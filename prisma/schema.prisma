// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String
  description String
  image_link  String
  product_id  Product[]
}

model Product {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String
  description String
  image_link  String
  price       Decimal
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  CartItem    CartItem? @relation(fields: [cartItemId], references: [id])
  cartItemId  String?
}

model CartItem {
  id         String    @id @default(uuid())
  product_id Product[]
  name       String
  quantity   Int
  price      Decimal
  Cart       Cart?     @relation(fields: [cartId], references: [id])
  cartId     String?
}

model Cart {
  id          String     @id @default(uuid())
  cartItem_id CartItem[]
}
